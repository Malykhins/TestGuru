<% if @questions.present? %>
  <p><%= "Test: #{@test.title}, level: #{@test.level}" %></p>

  <%= link_to 'Back', tests_path %>
  <%= link_to 'Edit test', edit_test_path(@test) %>
  <%= link_to 'Delete test', test_path(@test),
              method: :delete, data: { confirm: "Are you sure to delete?" } %>

  <h2>Test questions:</h2>

  <table>
    <tr>
      <th>id</th>
      <th>Body</th>
    </tr>

    <% @questions.each do |question| %>
      <tr>
        <td><%= question.id %></td>
        <td><%= question.body %></td>
        <td>
          <%= link_to 'Delete', question_path(question),
                      method: :delete, data: { confirm: "Are you sure to delete?" } %>
          <%= link_to 'Edit', edit_question_path(question) %>
        </td>
      </tr>
    <% end %>
  </table>
  <%= link_to 'New question', new_test_question_path(@test) %>
<% else %>
  <p>This test has no questions.</p>
<% end %>


